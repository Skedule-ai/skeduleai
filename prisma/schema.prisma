generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model organization {
  id        String   @id
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model availabilityConfiguration {
  userId         String
  organizationId String   
  timezone       String
  startTime      String   
  endTime        String   
  duration       DateTime
  workingDay     Int 
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  @@id([userId, organizationId])
}

model userConfiguration {
  userId          String   @id
  onBoardingModal Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model bookingService {
  id             String           @unique
  userId         String
  organizationId String
  bookingDetails bookingDetails[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@id([userId, organizationId])
}

model bookingDetails {
  id          String          @id
  customerId  String
  guest       guestUser?      @relation(references: [id], fields: [guestUserId])
  guestUserId Int?
  service     bookingService? @relation(references: [id], fields: [serviceId])
  serviceId   String
  date        DateTime
  time        DateTime
  status      Int
  duration    DateTime
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model guestUser {
  id                  Int              @id @default(autoincrement())
  name                String
  email               String
  phoneNumber         String
  emailVerified       Boolean          @default(false)
  phoneNumberVerified Boolean          @default(false)
  bookingDetails      bookingDetails[]
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
}
